<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MastermindGame">

    <!--
    <Button
        android:id="@+id/open_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"/>
     -->

    <LinearLayout
        android:id="@+id/defenseurcombi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="top|center_horizontal"
        >
        <com.example.mastermind.jeu.GrandeCase
            android:id="@+id/defenseurcase1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <com.example.mastermind.jeu.GrandeCase
            android:id="@+id/defenseurcase2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <com.example.mastermind.jeu.GrandeCase
            android:id="@+id/defenseurcase3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <com.example.mastermind.jeu.GrandeCase
            android:id="@+id/defenseurcase4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/trou"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="top|center_horizontal"
        >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/module1"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:orientation="horizontal"
        android:layout_gravity="top|center_horizontal"
        >
        <com.example.mastermind.jeu.ModuleIndice
            android:id="@+id/moduleindice"
            android:layout_width="300dp"
            android:layout_height="500dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/module2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="top|center_horizontal"
        >
        <com.example.mastermind.jeu.ModuleSelection
            android:id="@+id/moduleselection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>


</LinearLayout>